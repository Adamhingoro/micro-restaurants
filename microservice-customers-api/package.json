{
  "name": "microservice-skeleton",
  "version": "0.0.1",
  "description": "A bare-bone skeleton for building microservices. it uses ExpressJs-typescript",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf dist/*",
    "copy-assets": "ts-node tools/copyAssets",
    "lint": "tslint -c tslint.json -p tsconfig.json --fix",
    "tsc": "tsc",
    "build": "npm-run-all clean lint tsc",
    "dev:start": "npm-run-all build start",
    "dev": "nodemon --watch src -e ts,ejs --exec npm run dev:start",
    "start": "node ./dist/index.js",
    "test": "mocha -r ts-node/register tests/**/*.test.ts",
    "coverage": "nyc -r lcov -e .ts -x \"*.test.ts\" npm run test"
  },
  "author": "adam.abdulshakoor@gmail.com",
  "license": "MIT",
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "aws-sdk": "^2.771.0",
    "bcrypt": "^4.0.1",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-joi-validation": "^4.0.3",
    "joi-extract-type": "^15.0.8",
    "jsonwebtoken": "^9.0.0",
    "mysql2": "^2.2.5",
    "pg": "^8.4.1",
    "pg-hstore": "^2.3.3",
    "reflect-metadata": "^0.1.13",
    "request": "^2.88.2",
    "sequelize": "^5.22.3",
    "sequelize-typescript": "^1.1.0",
    "uuid": "^7.0.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/bluebird": "^3.5.32",
    "@types/chai": "^4.2.13",
    "@types/cors": "^2.8.8",
    "@types/express": "^4.17.8",
    "@types/hapi": "^18.0.3",
    "@types/hapi__joi": "^16.0.12",
    "@types/joi": "^14.3.4",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.13.25",
    "@types/request": "^2.48.5",
    "@types/sequelize": "^4.28.9",
    "@types/uuid": "^7.0.4",
    "@types/validator": "^10.9.0",
    "chai": "^4.2.0",
    "fs-extra": "^9.0.1",
    "mocha": "^7.2.0",
    "nodemon": "^2.0.5",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "rimraf": "^3.0.2",
    "shelljs": "^0.8.4",
    "ts-node": "^8.10.2",
    "tslint": "^6.1.3",
    "typescript": "^3.9.7"
  }
}
